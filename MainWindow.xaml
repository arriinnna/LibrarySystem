<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация в библиотеке"
        Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid>
        <Border Background="White"
                CornerRadius="10"
                Width="350"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="25"
                BorderThickness="1"
                BorderBrush="#FFE0E0E0">

            <StackPanel>
                <TextBlock Text="Вход в систему"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF3F51B5"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <TextBlock Text="Логин"
                           Foreground="#FF616161"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername"
                         FontSize="16"
                         Height="40"
                         Margin="0,0,0,15"
                         Padding="5"
                         BorderThickness="1"
                         BorderBrush="#FFBDBDBD"/>

                <TextBlock Text="Пароль"
                           Foreground="#FF616161"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             FontSize="16"
                             Height="40"
                             Margin="0,0,0,25"
                             Padding="5"
                             BorderThickness="1"
                             BorderBrush="#FFBDBDBD"/>

                <Button Content="Войти"
                        Click="Login_Click"
                        Height="45"
                        FontSize="16"
                        Margin="0,0,0,10"
                        Background="#FF3F51B5"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10,5"
                        BorderThickness="0"/>

                <Button Content="Зарегистрироваться"
                        Click="Register_Click"
                        Height="45"
                        FontSize="16"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="10,5"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>